
@using Microsoft.AspNetCore.Authentication

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            @foreach (var claim in User.Claims)
            {

                if (@claim.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")
                {

                    <span class="navbar-text text-white">Hello @claim.Value!</span>
                }
            }
        </li>
        <li class="nav-item">

            <a class="nav-link text-white" asp-area="AzureAD" asp-controller="Account" asp-action="SignedOut">Sign out</a>

        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
    }
</ul>